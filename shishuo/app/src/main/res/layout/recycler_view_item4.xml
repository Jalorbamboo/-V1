<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/top_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <cn.bingoogolapple.badgeview.BGABadgeImageView
                                    android:id="@+id/pic4"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="3dp"
                                    android:padding="7dp"
                                    app:badge_bgColor="@color/colorPrimary"
                                    app:badge_dragable="true"
                                    app:badge_gravity="rightBottom"
                                    />

                                <TextView
                                    android:clickable="true"
                                    android:id="@+id/author4"
                                    android:layout_width="80dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:singleLine="true"
                                    android:text="匿名"
                                    android:textColor="#00BFFF"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_time4"
                                    android:layout_width="150dp"
                                    android:layout_height="18dp"
                                    android:layout_marginLeft="5dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:layout_gravity="center"
                                    android:text="10小时前"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignLeft="@+id/top_layout"
                            android:layout_alignStart="@+id/top_layout"
                            android:layout_below="@+id/top_layout"
                            android:layout_marginTop="5dp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:singleLine="true"
                            android:text="小说精选"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />


                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title4"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">


                                <TextView
                                    android:id="@+id/text4"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:text="133388888888888888888888888888"
                                    android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/likes_number4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:visibility="gone"
                            app:ignore="NotSibling" />


                        <TextView
                            android:id="@+id/id4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />
                </RelativeLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>